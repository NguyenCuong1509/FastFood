@model FastFoodOnline.Models.HomeViewModel

<h2>Combo</h2>
<div class="row">
    @foreach (var combo in Model.Combos)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@combo.TenCombo</h5>
                    <p class="card-text">Giá Gốc: <s>@combo.GiaGoc VNĐ</s></p>
                    <p class="card-text">Khuyến Mãi: <b>@combo.GiaKhuyenMai VNĐ</b></p>
                    <a asp-action="Detail" asp-route-id="@combo.ComboId" asp-route-type="combo" class="btn btn-primary">Xem Chi Tiết</a>
                </div>
            </div>
        </div>
    }
</div>

<h2>Món Ăn</h2>
<div class="row">
    @foreach (var item in Model.MonAns)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img src="@item.HinhAnh" class="card-img-top" alt="@item.TenMon">
                <div class="card-body">
                    <h5 class="card-title">@item.TenMon</h5>
                    <p class="card-text">Giá: @item.Gia VNĐ</p>
                    <a asp-action="Detail" asp-route-id="@item.MonAnId" asp-route-type="monan" class="btn btn-primary">Xem Chi Tiết</a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Phân trang không reset trang -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link ajax-pagination" data-page="@i" href="javascript:void(0);">@i</a>
            </li>
        }
    </ul>
</nav>
