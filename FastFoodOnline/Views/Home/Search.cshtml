@model List<FastFoodOnline.Models.MonAn>

@{
    ViewData["Title"] = "Kết quả tìm kiếm";
    Layout = "~/Views/Shared/_nen.cshtml";
}

<h2 class="text-center">Kết quả tìm kiếm</h2>

@if (Model.Count == 0)
{
    <p class="text-danger">Không tìm thấy món ăn nào.</p>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <img src="@item.HinhAnh" class="card-img-top" alt="@item.TenMon">
                    <div class="card-body">
                        <h5 class="card-title">@item.TenMon</h5>
                        <p class="card-text">Giá: @item.Gia VNĐ</p>
                        <a href="#" class="btn btn-success">Thêm vào giỏ</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
