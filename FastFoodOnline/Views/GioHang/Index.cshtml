@model FastFoodOnline.Models.GioHang

@{
    ViewData["Title"] = "Giỏ Hàng";
    Layout = "~/Views/Shared/_nen.cshtml";
}
<h2>Giỏ Hàng</h2>

@if ((Model.MonAnGioHangs != null && Model.MonAnGioHangs.Any()) || (Model.ComboGioHangs != null && Model.ComboGioHangs.Any()))
{
    <!-- Bảng Món Ăn -->
    @if (Model.MonAnGioHangs != null && Model.MonAnGioHangs.Any())
    {
        <h3>Món Ăn</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Món Ăn</th>
                    <th>Giá</th>
                    <th>Số Lượng</th>
                    <th>Tổng</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MonAnGioHangs)
                {
                    <tr>
                        <td>@item.MonAn.TenMon</td>
                        <td>@item.MonAn.Gia.ToString("C")</td>
                        <td>
                            <form asp-action="CapNhatGio" method="post">
                                <input type="hidden" name="monAnId" value="@item.MonAnId" />
                                <input type="number" name="soLuong" value="@item.SoLuong" min="1" class="form-control" style="width: 60px; display: inline-block;" />
                                <button type="submit" class="btn btn-primary btn-sm">Cập Nhật</button>
                            </form>
                        </td>
                        <td>@(item.MonAn.Gia * item.SoLuong)</td>
                        <td>
                            <a asp-action="XoaKhoiGio" asp-route-monAnId="@item.MonAnId" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <!-- Bảng Combo -->
    @if (Model.ComboGioHangs != null && Model.ComboGioHangs.Any())
    {
        <!-- Bảng Combo -->
        @if (Model.ComboGioHangs != null && Model.ComboGioHangs.Any())
        {
            <h3>Combo</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Tên Combo</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Tổng</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ComboGioHangs)
                    {
                        <tr>
                            <td>@item.Combo.TenCombo</td>
                            <td>@item.Combo.GiaKhuyenMai.ToString("C")</td>
                            <td>
                                <form asp-action="CapNhatGio" method="post">
                                    <input type="hidden" name="comboId" value="@item.ComboId" />
                                    <input type="number" name="soLuong" value="@item.SoLuong" min="1" class="form-control" style="width: 60px; display: inline-block;" />
                                    <button type="submit" class="btn btn-primary btn-sm">Cập Nhật</button>
                                </form>
                            </td>
                            <td>@(item.SoLuong * item.Combo.GiaKhuyenMai)</td>
                            <td>
                                <a asp-action="XoaComboKhoiGio" asp-route-comboId="@item.ComboId" class="btn btn-danger btn-sm">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }

    <a asp-controller="GioHang" asp-action="XoaTatCa" class="btn btn-warning">Xóa Tất Cả</a>
    <a asp-controller="GioHang" asp-action="ThanhToan" class="btn btn-success">Thanh Toán</a>
    <a asp-controller="GioHang" asp-action="DonHangCuaToi" class="btn btn-primary">Xem Đơn Hàng</a>
}
else
{
    <p>Giỏ hàng của bạn đang trống.</p>
    <a asp-controller="GioHang" asp-action="DonHangCuaToi" class="btn btn-primary">Xem Đơn Hàng</a>
}
